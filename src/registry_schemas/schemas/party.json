{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/parties",
    "type": "object",
    "title": "The Corp Parties Schema",
    "definitions": {
        "person": {
            "type": "object",
            "properties": {
                "partyType": {
                    "type": "string",
                    "title": "The type of party",
                    "enum": [
                        "organization",
                        "person"
                    ]
                },
                "firstName": {
                    "type": "string",
                    "maxLength": 30
                },
                "lastName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 30
                },
                "middleInitial": {
                    "type": "string",
                    "maxLength": 30
                },
                "organizationName": {
                    "type": "string",
                    "maxLength": 150
                },
                "identifier": {
                  "type": "string",
                  "title": "The Identifier/Incorporation Number if available for Organization",
                  "default": "",
                  "examples": ["CP1234567"],
                  "pattern": "^[A-Z]{1,3}[0-9]{7}$"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            },
            "anyOf": [
                {
                  "properties": {
                    "partyType": { "const": "person" }
                  },
                  "required": ["firstName", "lastName"]
                },
                {
                  "properties": {
                    "partyType": { "const": "organization" }
                  },
                  "required": ["organizationName"]
                }
              ],
            "required": [
                "partyType"
            ]
        },
        "partyRole": {
            "type": "object",
            "properties": {
                "roleType": {
                    "enum": [
                        "Completing Party",
                        "Custodian",
                        "Liquidator",
                        "Director",
                        "Incorporator",
                        "Proprietor",
                        "Partner",
                        "Applicant"
                    ]
                },
                "appointmentDate": {
                    "type": "string",
                    "format": "date"
                },
                "cessationDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                }
            },
            "required": [
                "roleType",
                "appointmentDate"
            ]
        },
        "party": {
            "type": "object",
            "properties": {
                "officer": {
                    "$ref": "#/definitions/person"
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "title": {
                    "type": "string"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/partyRole"
                    }
                }
            },
            "required": [
                "officer",
                "roles",
                "mailingAddress"
            ],
            "if": {
                "allOf":[
                    {
                        "properties": {
                            "roles": {
                                "not":{
                                    "contains":{
                                        "type": "object",
                                        "properties": {
                                            "roleType": { "enum": ["Completing Party"] }
                                        },
                                        "required": ["roleType"]
                                    }
                                }
                            }
                        }
                    },
                    {
                        "properties":{
                            "officer": {
                                "type": "object",
                                "properties": {
                                    "partyType": { "enum": ["person"] }
                                },
                                "required":["partyType"]
                            }
                        }
                    }
                ]
            },
            "then": {
                "properties": {
                  "officer": {
                    "type": "object",
                    "properties": {
                      "firstName": { "minLength": 1 }
                    },
                    "required": ["firstName"]
                  }
                }
            }
        }
    },
    "properties": {
        "parties": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/party"
            }
        }
    },
    "required": [
        "parties"
    ]
}
