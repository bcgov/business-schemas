{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/parties",
    "type": "object",
    "title": "The Corp Parties Schema",
    "definitions": {
        "person": {
            "type": "object",
            "properties": {
                "partyType": {
                    "type": "string",
                    "title": "The type of party",
                    "enum": [
                        "organization",
                        "person",
                        "businessOrCorporation"
                    ]
                },
                "firstName": {
                    "type": "string",
                    "maxLength": 30
                },
                "lastName": {
                    "type": "string",
                    "maxLength": 30
                },
                "middleInitial": {
                    "type": "string",
                    "maxLength": 30
                },
                "organizationName": {
                    "type": "string",
                    "maxLength": 50
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "businessNumber": {                    
                    "type": ["string", "null"],
                    "minLength": 9,
                    "maxLength": 9,
                    "description": "An optional business number only for role type Proprietor"
                },
                "businessOrCorporationName": {
                    "type": "string"
                }
            },
            "anyOf": [
                {
                  "properties": {
                    "partyType": { "const": "person" }
                  },
                  "required": ["firstName", "lastName"]
                },
                {
                  "properties": {
                    "partyType": { "const": "organization" }
                  },
                  "required": ["organizationName"]
                },
                {
                  "properties": {
                    "partyType": { "const": "businessOrCorporation" }
                  },
                  "required": ["businessOrCorporationName", "email"]
                }
              ],
            "required": [
                "partyType"
            ]
        },
        "partyRole": {
            "type": "object",
            "properties": {
                "roleType": {
                    "enum": [
                        "Completing Party",
                        "Custodian",
                        "Liquidator",
                        "Director",
                        "Incorporator",
                        "Proprietor",
                        "Partner"
                    ]
                },
                "appointmentDate": {
                    "type": "string",
                    "format": "date"
                },
                "cessationDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                }
            },
            "required": [
                "roleType",
                "appointmentDate"
            ]
        },
        "party": {
            "type": "object",
            "properties": {
                "officer": {
                    "$ref": "#/definitions/person"
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "title": {
                    "type": "string"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/partyRole"
                    }
                }
            },
            "required": [
                "officer",
                "roles",
                "mailingAddress"
            ]
        }
    },
    "properties": {
        "parties": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/party"
            }
        }
    },
    "required": [
        "parties"
    ]
}
