{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/foreign_jurisdiction",
  "type": "object",
  "title": "Foreign Jurisdiction Schema",
  "required": [
      "country"
  ],
  "properties": {
      "country": {
          "type": "string",
          "examples": ["CA", "US"]
      },
      "region": {
          "type": [
              "string",
              "null"
          ],
          "title": "The foreign jurisdiction if country is Canada or USA.",
          "examples": [
              "--Canada--",
              "AB", "MB", "NB", "NL", "NS", "NT", "NU", "ON", "PE", "QC", "SK", "YT", "FEDERAL",
              "--US--",
              "AK", "AL", "AR", "AS", "AZ", "CA", "CO", "CT", "DC", "DE", "FL", "GA", "GU", "HI",
              "IA", "ID", "IL", "IN", "KS", "KY", "LA", "MA", "MD", "ME", "MI", "MN", "MO", "MP",
              "MS", "MT", "NC", "ND", "NE", "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA",
              "PR", "RI", "SC", "SD", "TN", "TX", "UM", "UT", "VA", "VI", "VT", "WA", "WI", "WV", "WY"
          ]
      }
  }
}
