{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/continuation_out",
    "title": "Continuation Out Application Schema",
    "definitions": {},
    "required": [
        "continuationOut"
    ],
    "type": "object",
    "properties": {
        "continuationOut": {
            "type": "object",
            "required": [
                "details",
                "continuationOutDate",
                "foreignJurisdiction"
            ],
            "properties": {
                "details": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2000,
                    "description": "A brief note to explain the continue out."
                },
                "continuationOutDate": {
                    "type": "string",
                    "format": "date",
                    "title": "Effective date of Continuation Out."
                },
                "foreignJurisdiction": {
                    "type": "object",
                    "required": [
                        "country",
                        "legalName"
                    ],
                    "properties": {
                        "country": {
                            "type": "string"
                        },
                        "region": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "title": "The foreign jurisdiction if country is Canada or USA."
                        },
                        "legalName": {
                            "type": "string",
                            "title": "Legal name of the business in the foreign jurisdiction."
                        }
                    }
                },
                "courtOrder": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/court_order#/properties/courtOrder"
                }
            }
        }
    }
}
