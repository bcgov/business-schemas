{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/continuation_out",
    "title": "Continuation Out Application Schema",
    "definitions": {},
    "required": [
        "continuationOut"
    ],
    "type": "object",
    "properties": {
        "continuationOut": {
            "type": "object",
            "required": [
                "details",
                "continuationOutDate",
                "foreignJurisdiction"
            ],
            "properties": {
                "details": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2000,
                    "description": "A brief note to explain the continue out."
                },
                "continuationOutDate": {
                    "type": "string",
                    "format": "date",
                    "title": "Effective date of Continuation Out."
                },
                "foreignJurisdiction": {
                    "type": "object",
                    "required": [
                        "country",
                        "legalName"
                    ],
                    "properties": {
                        "country": {
                            "type": "string"
                        },
                        "region": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "title": "The foreign jurisdiction if country is Canada or USA.",
                            "examples": [
                                "--Canada--",
                                "AB", "MB", "NB", "NL", "NS", "NT", "NU", "ON", "PE", "QC", "SK", "YT", "FEDERAL",
                                "--US--",
                                "AK", "AL", "AR", "AS", "AZ", "CA", "CO", "CT", "DC", "DE", "FL", "GA", "GU", "HI",
                                "IA", "ID", "IL", "IN", "KS", "KY", "LA", "MA", "MD", "ME", "MI", "MN", "MO", "MP",
                                "MS", "MT", "NC", "ND", "NE", "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA",
                                "PR", "RI", "SC", "SD", "TN", "TX", "UM", "UT", "VA", "VI", "VT", "WA", "WI", "WV", "WY"
                            ]
                        },
                        "legalName": {
                            "type": "string",
                            "title": "Legal name of the business in the foreign jurisdiction."
                        }
                    }
                },
                "courtOrder": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/court_order#/properties/courtOrder"
                }
            }
        }
    }
}
