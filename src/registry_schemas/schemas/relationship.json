{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/relationship",
    "type": "object",
    "title": "The Relationship Schema",
    "definitions": {
        "role": {
            "type": "object",
            "properties": {
                "identifier": {
                    "type": "string",
                    "maxLength": 36
                },
                "appointmentDate": {
                    "type": "string",
                    "format": "date"
                },
                "cessationDate": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "date"
                },
                "roleType": {
                    "enum": [
                        "CEO",
                        "CFO",
                        "President",
                        "Vice President",
                        "Chair",
                        "Treasurer",
                        "Secretary",
                        "Assistant Secretary",
                        "Other"
                    ]
                }
            },
            "required": [
                "appointmentDate",
                "roleType"
            ]
        },
        "relationship": {
            "type": "object",
            "properties": {
                "entity": {
                    "allOf": [
                        { "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/person" },
                        { "required": ["familyName"] }
                    ]
                },
                "deliveryAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "mailingAddress": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                },
                "roles": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/role"
                    }
                }
            },
            "required": [
                "roles",
                "entity",
                "deliveryAddress"
            ]
        }
    },
    "properties": {
        "relationships": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/relationship"
            }
        }
    },
    "required": [
        "relationships"
    ]
}
