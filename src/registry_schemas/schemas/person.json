{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/person",
    "type": "object",
    "title": "Person Schema",
    "required": [],
    "properties": {
        "identifier": {
            "type": "string",
            "maxLength": 36
        },
        "givenName": {
            "type": "string",
            "maxLength": 30
        },
        "familyName": {
            "type": "string",
            "maxLength": 30
        },
        "additionalName": {
            "type": "string",
            "title": "An additional name for a Person, can be used for a middle name.",
            "maxLength": 30
        },
        "middleInitial": {
            "type": "string",
            "maxLength": 30
        },
        "alternateName": {
            "type": "string",
            "title": "An alternative name for a Person (e.g., preferred name).",
            "maxLength": 90
        },
        "fullName": {
            "type": "string",
            "maxLength": 90
        },
        "email": {
            "type": "string",
            "format": "email"
        }
    }
}
