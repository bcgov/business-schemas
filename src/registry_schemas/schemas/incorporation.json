{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/incorporationApplication",
    "required": [
        "nameRequest",
        "offices",
        "parties",
        "shareClasses",
        "contactPoint",
        "incorporationAgreement",
        "hasNameTranslations"
    ],
    "type": "object",
    "title": "Incorporation Filing",
    "properties": {
        "nameRequest": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/name_request"
        },
        "offices": {
            "registeredOffice": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/office"
            },
            "recordsOffice": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/office"
            },
            "required": [
                "registeredOffice"
            ]
        },
        "parties": {
            "type": "array",
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/parties#/definitions/party"
            }
        },
        "shareClasses": {
            "type": "array",
            "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/share_class#/definitions/shareClass"
            }
        },
        "contactPoint" : {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/contactPoint"
        },
        "incorporationAgreement": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/agreementType"
        },
        "hasNameTranslations": {
            "type": "boolean",
            "title": "Has Name Translations?"
        }
    },
    "allOf": [{
        "if": {
            "properties": {
                "hasNameTranslations": {
                    "enum": [ true ]
                }
            }
        },
        "then": {
            "properties": {
                "nameTranslations": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^[ A-Za-zÀ-ÿ_@./#’&+-]*$"
                  }
               }
            },
            "required": [
                "nameTranslations"
            ]
        }
    }]
}

