{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/officers",
  "type": "object",
  "title": "The Officers Schema",
  "definitions": {
      "person": {
          "type": "object",
          "properties": {
              "firstName": {
                  "type": "string",
                  "maxLength": 30
              },
              "lastName": {
                  "type": "string",
                  "maxLength": 30
              },
              "middleInitial": {
                  "type": "string",
                  "maxLength": 30
              },
              "preferredName": {
                  "type": "string",
                  "maxLength": 50
              }
          },
          "required": [
              "lastName"
          ]
      },
      "officer": {
          "type": "object",
          "properties": {
              "officer": {
                  "$ref": "#/definitions/person"
              },
              "deliveryAddress": {
                  "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
              },
              "mailingAddress": {
                  "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
              },
              "appointmentDate": {
                  "type": "string",
                  "format": "date"
              },
              "cessationDate": {
                  "type": [
                      "string",
                      "null"
                  ],
                  "format": "date"
              },
              "roles": {
                  "type": "array",
                  "items": {
                      "type": "string",
                      "enum": [
                          "CEO",
                          "CFO",
                          "President",
                          "Vice President",
                          "Chair",
                          "Treasurer",
                          "Secretary",
                          "Assistant Secretary",
                          "Other"
                      ]
                  },
                  "minItems": 1,
                  "uniqueItems": true
              }
          },
          "required": [
              "officer",
              "deliveryAddress",
              "appointmentDate",
              "cessationDate",
              "roles"
          ]
      }
  },
  "properties": {
      "officers": {
          "type": "array",
          "items": {
              "$ref": "#/definitions/officer"
          }
      }
  },
  "required": [
      "officers"
  ]
}