{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/officers",
  "type": "object",
  "title": "The Officers Schema",
  "definitions": {
      "officer": {
          "type": "object",
          "properties": {
              "officer": {
                  "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/person"
              },
              "deliveryAddress": {
                  "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
              },
