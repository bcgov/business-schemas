{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/special_resolution",
    "definitions": {},
    "required": [
        "specialResolution"
    ],
    "type": "object",
    "title": "Special Resolution",
    "properties": {
        "specialResolution": {
            "type": "object",
            "required": [
                "resolution"
            ],
            "properties": {
                "meetingDate": {
                    "type": "string",
                    "format": "date"
                },
                "resolution": {
                    "type": "string",
                    "maxLength": 1000
                },
                "resolutionDate": {
                    "type": "string",
                    "format": "date"
                },
                "signingDate": {
                    "type": "string",
                    "format": "date"
                },
                "signatory": {
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/person"
                },
                "resolutionConfirmed": {
                    "type": "boolean"
                }
            }
        }
    }
}
